         </param>
         <param name="name" style="plain" type="xsd:string" required="true">
            <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN" title="Security group name">
               <para>The security group name.</para>
            </wadl:doc>
         </param>
