<application xmlns="http://wadl.dev.java.net/2009/02"
             xmlns:xsdxt="http://docs.rackspacecloud.com/xsd-ext/v1.0"
             xmlns:wadl="http://wadl.dev.java.net/2009/02"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <resources base="https://servers.api.openstack.com">
        <resource id="version" type="#VersionDetails" path="v2/">
            <resource id="tenantID" path="{tenant_id}">
                <param name="tenant_id" style="template" type="xsd:string">
                    <doc><p xmlns="http://www.w3.org/1999/xhtml">
                      The ID for the tenant or account in a multi-tenancy cloud.
                    </p></doc>
                </param>
                <resource path="os-hosts">
                    <method href="#listHosts"/>
                    <resource path="{host_name}">
                        <param name="host_name" style="template">
                            <doc><p xmlns="http://www.w3.org/1999/xhtml">
                              The name of the host of interest to you.
                            </p></doc>
                        </param>

                        <method href="#showHost"/>
                        <method href="#updateHost"/>

                        <resource path="startup">
                            <method href="#startup"/>
                        </resource>

                        <resource path="shutdown">
                            <method href="#shutdown"/>
                        </resource>

                        <resource path="reboot">
                            <method href="#reboot"/>
                        </resource>

                    </resource>
                </resource>
            </resource>
       </resource>
    </resources>

    <method name="GET" id="listHosts">
        <wadl:doc xmlns="http://www.w3.org/1999/xhtml" xml:lang="EN">
            <p xmlns="http://www.w3.org/1999/xhtml">
              List all hosts.
            </p>
        </wadl:doc>
        <response status="200">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/hosts-list-resp.json" />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/hosts-list-resp.xml" />
                </doc>
            </representation>
        </response>
    </method>

    <method name="PUT" id="updateHost">
        <wadl:doc xmlns="http://www.w3.org/1999/xhtml" xml:lang="EN">
            <p xmlns="http://www.w3.org/1999/xhtml">
              Enable a host or put it in maintenance mode.
            </p>
        </wadl:doc>
        <request>
            <param name="status" style="plain" required="true">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">
                    Accepted values are 'enable' or 'disable'.
                </p></doc>
            </param>
            <param name="maintenance_mode" style="plain" required="true">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">
                    Accepted values are 'enable' or 'disable'.
                </p></doc>
            </param>
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-put-maintenance-req.json" />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-put-maintenance-req.xml" />
                </doc>
            </representation>
        </request>
        <response status="200">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-put-maintenance-resp.json" />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-put-maintenance-resp.xml" />
                </doc>
            </representation>
        </response>
    </method>

    <method name="GET" id="showHost">
        <wadl:doc xmlns="http://www.w3.org/1999/xhtml" xml:lang="EN">
            <p xmlns="http://www.w3.org/1999/xhtml">
              Describe a specific host.
            </p>
        </wadl:doc>
        <response status="200">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-resp.json" />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-resp.xml" />
                </doc>
            </representation>
        </response>
    </method>


    <method name="GET" id="shutdown">
        <wadl:doc xmlns="http://www.w3.org/1999/xhtml" xml:lang="EN">
            <p xmlns="http://www.w3.org/1999/xhtml">
                Shut down a host.
            </p>
        </wadl:doc>
        <response status="200">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-shutdown.json" />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-shutdown.xml" />
                </doc>
            </representation>
        </response>
    </method>

    <method name="GET" id="startup">
        <wadl:doc xmlns="http://www.w3.org/1999/xhtml" xml:lang="EN">
            <p xmlns="http://www.w3.org/1999/xhtml">
                Start a host.
            </p>
        </wadl:doc>
        <response status="200">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-startup.json" />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-startup.xml" />
                </doc>
            </representation>
        </response>
    </method>

    <method name="GET" id="reboot">
        <wadl:doc xmlns="http://www.w3.org/1999/xhtml" xml:lang="EN">
            <p xmlns="http://www.w3.org/1999/xhtml">
                Reboot a host.
            </p>
        </wadl:doc>
        <response status="200">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-reboot.json" />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../api_samples/os-hosts/host-get-reboot.xml" />
                </doc>
            </representation>
        </response>
    </method>

</application>
