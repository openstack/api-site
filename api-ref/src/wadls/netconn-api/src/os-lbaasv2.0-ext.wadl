                <listitem><para><code>name</code></para></listitem>
                <listitem><para><code>description</code></para></listitem>
                <listitem><para><code>protocol</code></para></listitem>
                <listitem><para><code>protocol_port</code></para></listitem>
                <listitem><para><code>connection_limit</code></para></listitem>
                <listitem><para><code>default_pool_id</code></para></listitem>
                <listitem><para><code>admin_state_up</code></para></listitem>
                <listitem><para><code>loadbalancers</code></para></listitem>
                <listitem><para><code>default_tls_container_ref</code></para></listitem>
                <listitem><para><code>sni_container_refs</code></para></listitem>
            </itemizedlist>
            <para>Example: Show listener details</para>
        </wadl:doc>
        <response status="200">
            <representation mediaType="application/json">
