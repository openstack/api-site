	<!ENTITY portCreateParameters
	      '
     <param required="false" name="status"  style="plain" type="xsd:string"><wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"><para>The port status. Value is UP or DOWN.</para></wadl:doc></param>
