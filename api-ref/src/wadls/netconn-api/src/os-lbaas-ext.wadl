                </wadl:doc>
            </representation>
        </request>
        <response status="201"> &vipResponseParams; <representation
                mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code href="api_samples/VIP-post-resp.json"
                    />
                </wadl:doc>
            </representation>
        </response> &fault400; &fault401; </method>
