            <resource path="build_info" id="build_info">
               <method href="#build_info_show"/>
            </resource>
            <resource id="software_configs"
               path="software_configs">
               <method href="#software_config_create"/>
               <resource path="{config_id}" id="config_id">
                  <param xmlns="http://wadl.dev.java.net/2009/02" name="config_id" style="template"
                     required="true">
                  <wadl:doc
                     xmlns="http://docbook.org/ns/docbook" xmlns:wadl="http://wadl.dev.java.net/2009/02"
                     xml:lang="EN">
                     <para>
                        The configuration ID.
                     </para>
                  </wadl:doc>
                  </param>
