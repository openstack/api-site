    <method name="POST" id="createService">
        <doc xml:lang="EN" title="Add a Service">
            <p xmlns="http://www.w3.org/1999/xhtml" class="shortdesc">Adds a service.</p>
        </doc>
        <request>
            <representation mediaType="application/json">
                <doc>
                    <xsdxt:sample title="Add Service - Request: JSON">   
                        <xsdxt:code href="../common/samples/ServiceCreateRequest.json"/>
                    </xsdxt:sample>
                </doc>
            </representation>
        </request>
        <response status="201">
