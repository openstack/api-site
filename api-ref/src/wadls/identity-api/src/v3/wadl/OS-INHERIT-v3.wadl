                        </param>
                        <resource id="users-domain" path="users">
                            <resource id="user_id2" path="{user_id}">
                                <param name="user_id" style="template"
                                    type="csapi:UUID" required="true">
                                    <wadl:doc xml:lang="EN"
                                        xmlns="http://docbook.org/ns/docbook">
                                        <para>
