                            <wadl:doc xml:lang="EN"
                                xmlns="http://docbook.org/ns/docbook">
                                <para>
                                    The UUID of the project.
                                </para>
                            </wadl:doc>
                        </param>
                        <resource id="users" path="users">
                            <resource id="user_id" path="{user_id}">
