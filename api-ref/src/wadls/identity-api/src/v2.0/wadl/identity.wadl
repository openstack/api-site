                    <xsdxt:sample title="List extensions: JSON response">
                        <xsdxt:code href="../samples/admin/extensions-list-response.json"/>
                    </xsdxt:sample>
                </wadl:doc>
               <!--  <param xmlns="http://wadl.dev.java.net/2009/02"
                    name="next" style="plain" type="xsd:anyURI"
